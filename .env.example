# API Keys
OPENAI_API_KEY=your_openai_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# LangSmith Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=guest-response-agent
LANGSMITH_TRACING_V2=true

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=response_templates

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# LLM Configuration
LLM_MODEL=deepseek-reasoner
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Retrieval Configuration
RETRIEVAL_TOP_K=3
# With trigger-query embeddings, scores are much higher:
#   - Exact/close matches: 0.92-1.00
#   - Semantically related: 0.65-0.75
#   - Weak/off-topic: <0.55
RETRIEVAL_SIMILARITY_THRESHOLD=0.70
DIRECT_SUBSTITUTION_THRESHOLD=0.85                     

# Cache Configuration
CACHE_TTL_SECONDS=300
EMBEDDING_CACHE_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
