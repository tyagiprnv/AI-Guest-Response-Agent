# API Keys
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
DEEPSEEK_API_KEY=  # Optional, only if using DeepSeek

# LangSmith Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=guest-response-agent
LANGSMITH_TRACING_V2=true

# Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=response_templates

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# LLM Configuration (using Groq for fast inference)
LLM_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Retrieval Configuration
RETRIEVAL_TOP_K=3
# With trigger-query embeddings, scores are much higher:
#   - Exact/close matches: 0.92-1.00
#   - Semantically related: 0.65-0.75
#   - Weak/off-topic: <0.55
RETRIEVAL_SIMILARITY_THRESHOLD=0.70
DIRECT_SUBSTITUTION_THRESHOLD=0.80                    

# Cache Configuration
CACHE_TTL_SECONDS=300
EMBEDDING_CACHE_SIZE=1000
CACHE_BACKEND=memory  # memory or redis

# Redis Configuration (if CACHE_BACKEND=redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATA_BACKEND=json  # json or postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=guest_response_agent
DATABASE_USER=agent_user
DATABASE_PASSWORD=secure_password_here

# PostgreSQL password for docker-compose (must match DATABASE_PASSWORD)
POSTGRES_PASSWORD=secure_password_here

# Authentication
AUTH_ENABLED=true
API_KEYS=dev-key-12345,test-key-67890  # Comma-separated API keys (dev only)

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_STANDARD=60
RATE_LIMIT_PREMIUM=300
RATE_LIMIT_ENTERPRISE=1000

# Cost Tracking
ENABLE_COST_TRACKING=true
