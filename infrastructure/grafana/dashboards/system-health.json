{
  "dashboard": {
    "title": "System Health & Infrastructure",
    "tags": ["system", "health", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "API Health Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"agent-api\"}",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "name",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 1, "text": "HEALTHY", "color": "green"},
              {"value": 0, "text": "DOWN", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Qdrant Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"qdrant\"}",
            "refId": "A"
          }
        ],
        "options": {
          "textMode": "name",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 1, "text": "HEALTHY", "color": "green"},
              {"value": 0, "text": "DOWN", "color": "red"}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "Uptime",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "time() - process_start_time_seconds{job=\"agent-api\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 4,
        "title": "Request Success Rate",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(agent_requests_total{status=\"success\"}[5m])) / sum(rate(agent_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum by(status_code) (rate(http_requests_total[5m]))",
            "legendFormat": "{{status_code}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Error Rate by Type",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "sum by(error_type) (rate(agent_errors_total[5m]))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"agent-api\"}",
            "legendFormat": "RSS",
            "refId": "A"
          },
          {
            "expr": "process_virtual_memory_bytes{job=\"agent-api\"}",
            "legendFormat": "Virtual",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"agent-api\"}[5m]) * 100",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Open File Descriptors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "process_open_fds{job=\"agent-api\"}",
            "legendFormat": "Open FDs",
            "refId": "A"
          },
          {
            "expr": "process_max_fds{job=\"agent-api\"}",
            "legendFormat": "Max FDs",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "File Descriptors"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Qdrant Collection Size",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "qdrant_collection_vectors_count",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "options": {
          "textMode": "value_and_name"
        }
      },
      {
        "id": 11,
        "title": "Database Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 22},
        "targets": [
          {
            "expr": "qdrant_active_connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Request Queue Depth",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "agent_request_queue_depth",
            "legendFormat": "Queue depth",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Guardrail Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "rate(agent_guardrail_duration_seconds_sum[5m]) / rate(agent_guardrail_duration_seconds_count[5m])",
            "legendFormat": "{{guardrail_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Avg Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 14,
        "title": "Recent Errors (Log)",
        "type": "logs",
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 38},
        "targets": [
          {
            "expr": "{job=\"agent-api\"} |= \"ERROR\"",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
